<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Add New Blog</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>





                <div class="row">
                    <div class="col-md-10 push-1" >
                        <form id="form-main" action="/blogs/add/save?_csrf={{_csrfToken}}" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                                <label for="input-blog-author" class="col-form-label bold">Blog Author</label>
                                <!--<div>-->
                                    <input name = 'post_BlogAuthor' id="input-blog-author" class="form-control" type="text" placeholder="Author's name" >
                                <!--</div>-->
                                <br>
                            </div>

                            <div id="Div_BlogTitle">
                                <label for="input-blog-title" class="col-form-label">Blog Title</label>
                                <div>
                                    <input name = 'post_BlogTitle' id="input-blog-title" class="form-control" type="text" placeholder="Title of the BlogPost" >
                                </div>
                                <br>
                            </div>


                            <div id="Div_BlogDisplayImage">
                                <label for="presentation-only-field-display" class="col-form-label">Blog DisplayImage</label>
                                <button id="btn-file-choose" class="input-group-addon" style="cursor: pointer;">Choose Image</button>
                                <div class="justify-content-center input-group">
                                    <img id="preview-image"/>
                                    <input id="hidden-file-chooser" name="post_Image" type="file" style="width:0;"  >
                                </div>
                            </div>
                            <br>

                            <div id="Div_BlogContent">
                                <label for="input-blog-content" class="col-form-label">Blog Description</label>
                                <div>
                                    <textarea name="post_BlogContent" id="input-blog-content" class="form-control"  placeholder="Write your content here" ></textarea>
                                </div>
                                <br>
                            </div>







                            <br><br>
                            <div class="form-group row">
                                <div class="col-4" ></div>
                                <input type="submit" class=" col-4 btn btn-outline-info" value="Add Post">
                                <div class="col-4" ></div>
                            </div>

                        </form>
                    </div>
                </div>



                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery-validate-additional-methods.min.js"></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>
<script type="text/javascript" src="/lib/tinymce/js/tinymce/tinymce.min.js"></script>
<script type="text/javascript" src="/js/my_personal.js"></script>


<script>

    setupTinyMCE('#input-blog-content') ;

    handleBrowseButton_Preview("btn-file-choose","hidden-file-chooser", "preview-image") ;

    $('#form-main').validate({
        errorPlacement : (error, element)=>{
            //insert the label element after the parent div
            error.insertAfter(element) ;
            $(error).addClass('text-danger') ;

        },
        highlight: function(element) {
            // function is invoked on any input element when error occurs for that particular input
            $(element).parent().addClass('has-danger') ;

        },
        unhighlight: function(element) {
            $(element).parent().removeClass('has-danger') ;

        },
        success : (label, element)=>{
            $(element).parent().addClass("has-success") ;
        },
        rules : {
            post_BlogAuthor : {
                required : true,
                minlength : 3
            },
            post_BlogTitle : {
                required : true,
                minlength : 10,
                maxlength : 100
            },
            post_Image : {
                required : true,
                extension : 'jpg|jpeg|png|JPG|JPEG|PNG'
            },
            post_BlogContent : {
                required : true,
                minlength : 3,
            },


        },
        messages : {
            post_BlogAuthor : {
                required : "You must Provide an author name for the blog",
                minlength : "The author name should be a min of 3 characters"
            },
            post_BlogTitle : {
                required : "You must provide a blog title",
                minlength : "The blog title must be atleast 10 characters",
                maxlength : "Blog Title cannot exceed 100 characters"
            },
            post_Image : {
                required : "You must upload an image file",
                extension : 'The File has the wrong extension type. Only jpg, jpeg and png extensions are allowed'
            },
            post_BlogContent : {
                required : "You must provide blog content",
                minlength : "Content must be atleast 3 characters",
            },
        },
    }) ;







</script>






</html>
