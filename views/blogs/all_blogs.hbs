<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">



                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">All Blogs</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>


                <table  class='table table-bordered table-hover' >

                    <tr class='table-info'>
                        <th>Blog Image</th>
                        <th>Blog Title</th>
                        <th>Creation Date/Time</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                    {{#ifEquals blogsData.length 0}}
                        {{>empty_state_table}}
                    {{/ifEquals}}

                    {{#each blogsData}}
                    <tr>
                        <td class='addon-link' data-href='/blogs/view/{{blog_id}}'><img src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{blog_display_image}}' class='img-fluid' width='90px' ></td>
                        <td class='addon-link' data-href='/blogs/view/{{blog_id}}'>  {{blog_title}}  </td>
                        <td class='addon-link' data-href='/blogs/view/{{blog_id}}'>  {{blog_creation_date}}</td>
                        <td>
                            <a href="/blogs/edit/{{blog_id}}">
                                <button type='submit' class='btn btn-info' ><span><i class='fa fa-edit'></i></span> Edit Blog</button>
                            </a>
                        </td>
                        <td>
                            <button class="btn btn-danger button_Delete" type="button" data-blog-id="{{blog_id}}" data-blog-image-name="{{blog_display_image}}" data-toggle="modal" data-target="#modal_Delete" >
                                <span><i class='fa fa-trash'></i></span> Delete Blog
                            </button>
                        </td>
                    </tr>

                    {{/each}}


                </table>

                <div>
                    {{{parsedPaginatorHtml}}}
                </div>




                <br><br>
                <div class="row">
                    <div class="col-4"></div>
                    <a class="col-4 btn btn-outline-info" href="/blogs/add">
                        Add New Item
                    </a>
                    <div class="col-4"></div>
                </div>

                <div class="modal fade" id="modal_Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this Blog</h6>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <form class="text-center" method='post' action='/blogs/delete'>
                                    <input id="input_BlogId" type='hidden' name='post_BlogId'>
                                    <input id="input_BlogImageName" type='hidden' name='post_ImageFileName'>
                                    <input type="hidden" name="_csrf" value="some csrf token here">
                                    <input type='submit' class='btn btn-danger ' value='Yes'>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>





            </div>
        </div>
    </div>
</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>

<script>
    $('#modal_Delete').on('show.bs.modal', function (event) {
        let button = $(event.relatedTarget) ; // Button that triggered the modal
        let blogId = button.attr('data-blog-id') ;
        let blogImageName= button.attr('data-blog-image-name') ;


        $(this).find('#input_BlogId').val(blogId) ;
        $(this).find('#input_BlogImageName').val(blogImageName) ;
    })
</script>







</html>
