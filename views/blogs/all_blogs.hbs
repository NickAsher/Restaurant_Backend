<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">



                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">All Blogs</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>


                <table  class='table table-bordered table-hover' >

                    <tr class='table-info'>
                        <th>Blog Display Image</th>
                        <th>Blog Title</th>
                        <th>Creation Date/Time</th>
                        <th>Action</th>
                    </tr>

                    {{#each blogsData}}
                    <tr>
                        <td class='addon-link' data-href='/blog/{{blog_id}}'><img src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{blog_display_image}}' class='img-fluid' width='90px' ></td>
                        <td class='addon-link' data-href='/blog/{{blog_id}}'>  {{blog_title}}  </td>
                        <td class='addon-link' data-href='/blog/{{blog_id}}'>  {{blog_creation_date}}</td>

                        <td>
                            <div style='display: inline-block'>
                                <a href="/blog/{{blog_id}}/edit">
                                    <button type='submit' class='btn btn-info' ><span><i class='fa fa-edit'></i></span></button>
                                </a>
                            </div>
                            <div style='display: inline-block'>
                                <form action='blogs/delete' method='post'>
                                    <input type='hidden' name='post_BlogId' value='{{blog_id}}'>
                                    <input type="hidden" name="post_ImageFileName" value="{{blog_display_image}}" >
                                    <button type='submit' class='btn btn-danger' ><span><i class='fa fa-trash'></i></span></button>
                                </form>
                            </div>
                        </td>
                    </tr>

                    {{/each}}


                </table>

                <div>
                    {{{parsedPaginatorHtml}}}
                </div>




                <br><br>
                <div class="row">
                    <div class="col-4"></div>
                    <a class="col-4 btn btn-outline-info" href="/blogs/add">
                        Add New Item
                    </a>
                    <div class="col-4"></div>
                </div>





                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>





            </div>
        </div>
    </div>
</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>








</html>
