<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Gallery Images</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>


                <a href="sort-gallery-item.php" style="float: right" class="btn btn-primary">Change Order</a>


                <table  class="table table-bordered table-hover" >
                    <tr class="table-info">
                        <th>Sr No </th>
                        <th>Item </th>
                        <th>Delete</th>
                    </tr>
                    {{#each galleryData}}
                    <tr>
                        <td class='td-link' data-href='/gallery/{{gallery_item_id}}'>{{gallery_item_sr_no}}</td>
                        <td class='td-link' data-href='/gallery/{{gallery_item_id}}'><img src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{gallery_item_image_name}}' width='90px' class='img-fluid' ></td>
                        <td>
                            <form method='post' action='/gallery/delete'>
                                <input type='hidden' name='post_GalleryImageId' value='{{gallery_item_id}}'>
                                <input type='hidden' name='post_GalleryImageName' value='{{gallery_item_image_name}}'>
                                <input type='submit' class='btn btn-danger' value='Delete'>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </table>
                <br><br>



                <div class="row">
                    <div class="col-4"></div>
                    <a class="col-4 btn btn-outline-info" href="/gallery/add">Add New Item</a>
                    <div class="col-4"></div>
                </div>
                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



