<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Add New Image</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>

                <div class="row">
                    <div class="col-md-10 push-md-1">
                        <div class="card">
                            <div class="card-block">
                                <form id="form-main" action="/gallery/add/save?_csrf={{_csrfToken}}" method="post" enctype="multipart/form-data">




                                    <div class="form-group row">

                                        <div class="col-4 push-md-4">
                                            <div class="text-center">
                                                <button id="btn-file-choose" class="btn btn-outline-primary" style="cursor: pointer;">Choose Image</button>
                                            </div>
                                            <br>
                                            <div class="justify-content-center input-group">
                                                <img id="preview-image"/>
                                                <input id="hidden-file-chooser" name="post_Image" type="file" style="width:0;" >
                                            </div>
                                        </div>
                                    </div>
                                    <br><br>

                                    <div class="form-group row">
                                        <div class="col-1"></div>
                                        <a href="/gallery" class="col-4 btn btn-danger">Cancel</a>
                                        <div class="col-2"></div>
                                        <input type="submit" class=" col-4 btn btn-success" value="Add">
                                        <div class="col-1" ></div>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <br><br><br><br><br>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery-validate-additional-methods.min.js"></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>


<script>
    handleBrowseButton_Preview("btn-file-choose","hidden-file-chooser", "preview-image") ;

    $('#form-main').validate({
        errorPlacement : (error, element)=>{
            //insert the label element after the parent div
            error.insertBefore(element.parent()) ;
            $(error).addClass('text-danger') ;

        },
        highlight: function(element) {
            // function is invoked on any input element when error occurs for that particular input
            $(element).parent().addClass('has-danger') ;

        },
        unhighlight: function(element) {
            $(element).parent().removeClass('has-danger') ;

        },
        success : (label, element)=>{
            $(element).parent().addClass("has-success") ;
        },
        rules : {
            post_Image : {
                required : true,
                extension : 'jpg|jpeg|png|JPG|JPEG|PNG'
            }

        },
        messages : {
            post_Image : {
                required : "You must upload an image file",
                extension : 'The File has the wrong extension type. Only jpg, jpeg and png extensions are allowed'
            },
        },
    }) ;

</script>





</html>
