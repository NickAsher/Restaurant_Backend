<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="text-center">
                            <h1 class="">Offers & Specials</h1>
                            <a href='\specials\arrange' class="mytheme-anchor">Change Order</a>
                        </div>
                    </div>
                </div>
                <br><br><br>





                <br><br>
                <table  class='table table-bordered table-hover' >

                    <tr class='table-info'>

                        <th>Display Image</th>
                        <th>Title</th>
                        <th>Message</th>
                        <th>Created On</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                    {{#each offerData}}

                    <tr>
                        <td class='addon-link-link' data-href='/specials/{{id}}'><img src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{image}}' class='img-fluid' width='90px' ></td>
                        <td class='addon-link' data-href='/specials/{{id}}'>  {{title}}  </td>
                        <td class='addon-link' data-href='/specials/{{id}}'>  {{message}}</td>
                        <td class='addon-link' data-href='/specials/{{id}}'>  {{creation_datetime}}</td>

                        <td>
                            <div style='display: inline-block'>
                                <a href="/specials/{{id}}/edit">
                                    <button type='submit' class='btn btn-info' ><span><i class='fa fa-edit'></i></span> Edit Offer </button>
                                </a>
                            </div>
                        </td>

                        <td>
                            <button class="btn btn-danger button_Delete" type="button" data-offer-id="{{id}}" data-offer-image-name="{{image}}" data-toggle="modal" data-target="#modal_Delete" >
                                <span><i class='fa fa-trash'></i></span>
                                Delete Offer
                            </button>

                        </td>
                    </tr>

                    {{/each}}


                </table>

                <br><br>
                <div class="row">
                    <div class="col-4"></div>
                    <a class="col-4 btn btn-outline-info" href="/specials/add">
                        Add New Item
                    </a>
                    <div class="col-4"></div>
                </div>


                <div class="modal fade" id="modal_Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this offer</h6>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <form class="text-center" method='post' action='/specials/delete' enctype="multipart/form-data">
                                    <input id="input_OfferId" type='hidden' name='post_OfferId'>
                                    <input id="input_OfferImageName" type='hidden' name='post_ImageFileName'>
                                    <input type="hidden" name="_csrf" value="some csrf token here">
                                    <input type='submit' class='btn btn-danger ' value='Yes'>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>




                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>

<script>
    $('#modal_Delete').on('show.bs.modal', function (event) {
        let button = $(event.relatedTarget) ; // Button that triggered the modal
        let offerItemId = button.attr('data-offer-id') ;
        let offerImageName = button.attr('data-offer-image-name') ;


        $(this).find('#input_OfferId').val(offerItemId) ;
        $(this).find('#input_OfferImageName').val(offerImageName) ;
    })
</script>






</html>
