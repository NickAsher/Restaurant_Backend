<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <!--<link rel="stylesheet" href="/lib/reset/reset.css" >-->

    <link rel = "stylesheet" href="/lib/jquery_ui/jquery-ui.min.css" >
    <link rel = "stylesheet" href="/lib/jquery_ui/jquery-ui.structure.min.css" >
    <link rel = "stylesheet" href="/lib/jquery_ui/jquery-ui.theme.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >
    <link rel = "stylesheet" href="/lib/toastr/toastr.min.css" />

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
    <link rel="stylesheet" href="/css/arrange.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Arrange Offers & Specials</h1>
                        </div>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <div class="row">
                    <div class="col-12 col-md-8 col-lg-6 push-md-2 push-lg-3">
                        <div class="card">
                            <div class="card-block text-center">
                                <ol id="" class="hidden-list-numbering" style="display: inline-block;float: left;">
                                    {{#each offerData}}
                                        <li style='height: 102px;'></li>
                                    {{/each}}
                                </ol>
                                <ol id="sorting" class="my-sortable-list" style="display: inline-block">
                                    {{#each offerData}}
                                        <li id='{{id}}'><img src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{image}}' width='160px' height='90px' > </li>
                                    {{/each}}
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <br>
                <div class="row">
                    <div class="col-4"></div>
                    <button class="col-4 btn btn-outline-info" href="/gallery/add" onclick="saveSortOrder();">Save order</button>
                    <div class="col-4"></div>
                </div>
                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script src="/lib/jquery/jquery.js" ></script>
<script src="/lib/jquery_ui/jquery-ui.js" ></script>
<script src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script src="/lib/toastr/toastr.min.js" ></script>

<script src="/lib/t3/t3.js"></script>
<script src="/js/my_personal.js"></script>


<script>
    $('#sorting').sortable({
        placeholder: "highlight",
        forcePlaceholderSize: true,
        axis:'y',
        opacity:0.7
    }) ;

    function saveSortOrder() {
        let sortedArray = $('#sorting').sortable("toArray") ;
        console.log(sortedArray) ;
        fetch('/specials/arrange', {
            method: 'POST',
            body: new URLSearchParams({
                _csrf : "{{_csrfToken}}",
                sortedArray : JSON.stringify(sortedArray)
            })
        })
        .then((response)=>response.json())
        .then((data)=>{
            if(data.status == true){
                makeToast('success', "New Order is saved <br> taking you back to Offers & Specials page")
                setTimeout(function () {
                    window.location.href="/specials" ;
                }, 1000)
            }else{
                throw data ;
            }
        })
        .catch((err)=>{
            console.log(err) ;
            makeToast('error', "Error in saving the new order") ;
        }) ;
    }



</script>
</html>
