<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Add New Offer</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>


                <div class="row">
                    <div class = col-md-1></div>

                    <div id="Section_AddNewItemForm" class="col-md-10" >
                        <form action="/specials/add/save?_csrf={{_csrfToken}}" method="post" enctype="multipart/form-data">


                            <div class="form-group row">
                                <label for="input-offer-message" class="col-3 col-form-label">Offer Title</label>
                                <div class="col-md-9">
                                    <input name="post_OfferTitle" id="input-offer-message" class="form-control" type="text" >
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="input-offer-message" class="col-3 col-form-label">Offer Message</label>
                                <div class="col-md-9">
                                    <textarea name='post_OfferMessage' id="input-offer-message" class="form-control" rows="3"  ></textarea>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-3 col-form-label">Offer Image</label>
                                <div class="col-md-9">
                                    <button id="btn-file-choose" class="input-group-addon" style="cursor: pointer;">Choose Image</button>
                                    <div class="justify-content-center input-group">
                                        <input id="hidden-file-chooser" name="post_Image" type="file" style="width:0;" accept="image/x-png,image/jpeg" >
                                        <img id="preview-image"/>
                                    </div>
                                </div>
                            </div>

                            <br><br>

                            <div class="form-group row">
                                <div class="col-4" ></div>
                                <input type="submit" class=" col-4 btn btn-info" value="Add">
                                <div class="col-4" ></div>
                            </div>

                        </form>
                    </div>

                    <div class="col-md-1"></div>

                </div>


                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>
<script type="text/javascript" src="/js/my_personal.js"></script>



<script>

    handleBrowseButton_Preview("btn-file-choose","hidden-file-chooser","presentation-only-field") ;


</script>




</html>
