<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap-toggle/bootstrap-toggle.css" >
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">View Addon</h1>
                        </div>
                    </div>
                </div>
                <br>


                <div class="row">
                    <div class="push-md-1 col-md-10" >
                        <div class="card">
                            <div class="card-block">
                                <br>


                                <div class="form-group row">
                                    <label for="input-item-name" class="col-3 col-form-label">Item Name</label>
                                    <div class="col-md-9">
                                        <input id="input-item-name" name="itemName" class="form-control" type="text" value="{{addonData.item_name}}" disabled>
                                    </div>
                                </div>



                                <div class="form-group row">
                                    <label for="input-item-category" class="col-3 col-form-label">Item Category</label>
                                    <div class="col-md-9">
                                        <input id="input-item-category" class="form-control" type="text" value="{{addonData.category_name}}" disabled>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="input-item-category" class="col-3 col-form-label">Item Addon-Group</label>
                                    <div class="col-md-9">
                                        <input id="input-item-category" class="form-control" type="text" value="{{addonData.addon_group_display_name}}" disabled>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="input-item-active" class="col-3 col-form-label">Item Active</label>
                                    <div class="col-md-9">
                                        <input id="input-item-active" name="isItemActive" class="form-control" type="hidden" value="{{addonData.item_is_active}}" disabled >
                                        <input id="input-item-active-presentation" type="checkbox" class="form-control"    {{#if addonData.item_is_active}} disabled checked="checked"{{/if}}  data-toggle="toggle" data-width="100" data-onstyle="success" data-offstyle="danger" data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>" >
                                    </div>
                                </div>

                                <br>
                                <br>
                                <br>

                                {{#each addonSizePriceData}}
                                    <div class="form-group row">
                                        <label  class="col-3 col-form-label">Item Price ({{size_name}}) </label>
                                        <div class="col-md-9 input-group">
                                            <input type="hidden" class="form-control"  value="{{addon_size_active}}" readonly >
                                            <input type='checkbox' class='form-control' {{#if addon_size_active}}checked="checked"{{/if}} disabled data-toggle='toggle' data-width='50' data-onstyle='success' data-offstyle='danger' data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>" >
                                            <input type='text' class='form-control'  style='margin-left: 20px; ; ' placeholder="Nan" value="{{addon_price}}"  disabled>
                                        </div>
                                    </div>
                                {{/each}}

                            </div>
                        </div>
                    </div>
                </div>


                <br><br><br>
                <div class="form-group row">
                    <div class="col-4" ></div>
                    <a href='/menu/addons/edit/{{addonData.item_id}}' class='col-4 btn btn-info' >Edit this Item</a>
                    <div class="col-4" ></div>
                </div>


                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/bootstrap-toggle/bootstrap-toggle.js" ></script>

<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>








</html>
