<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap-toggle/bootstrap-toggle.css" >
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12 bg-grey">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Edit Category</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>


                <div class="row">
                    <div class="push-md-1 col-md-10" >
                        <div class="card">
                            <div class="card-block">
                                <form action="/menu/category/edit/save" method="post" enctype="multipart/form-data" >

                                    <input name="categoryId" type="hidden" value="{{categoryData.category_id}}">
                                    <input name="categoryOldImageFileName" type="hidden" value="{{categoryData.category_image}}">
                                    <br>
                                    <div class="form-group row">
                                        <label for="input-category-name" class="col-3 col-form-label">Category Name</label>
                                        <div class="col-md-9">
                                            <input id="input-category-name" name="categoryName" class="form-control" type="text" value="{{categoryData.category_name}}">
                                        </div>
                                    </div>
                                    <br>
                                    <div class="form-group row">
                                        <label for="input-category-active" class="col-3 col-form-label">Category Active</label>
                                        <div class="col-md-9">
                                            <input id="input-category-isActive-hidden" name="isCategoryActive" class="form-control" type="hidden" value="{{categoryData.category_is_active}}"  >
                                            <input id="input-category-isActive-presentation"  type="checkbox" class="form-control" {{#if categoryData.category_is_active}} checked="checked" {{/if}}  data-toggle="toggle" data-width="100" data-onstyle="success" data-offstyle="danger" data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>" >

                                        </div>
                                    </div>
                                    <br>
                                    <div class="form-group row">
                                        <label  class="col-3 col-form-label">Category Image</label>
                                        <div class="col-md-4 ">
                                                <img src='{{IMAGE_BACKENDFRONT_LINK_PATH}}{{categoryData.category_image}}' alt='image' class="img-fluid form-control" width="100px" />
                                        </div>
                                        <div class="col-4 push-md-1 ">
                                            <button id="btn-file-choose" class="input-group-addon" style="cursor: pointer;">Choose Image</button>
                                            <div class="justify-content-center input-group">
                                                <input id="hidden-file-chooser" name="post_Image" type="file"  style="width:0;" >
                                                <img id="preview-image"/>
                                            </div>

                                        </div>
                                    </div>
                                    <br><br><br>
                                    <div class="form-group row">
                                        <div class="col-4" ></div>
                                        <input type="submit" class=" col-4 btn btn-info" value="Save this Category">
                                        <div class="col-4" ></div>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <br><br><br><br><br><br>



                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/bootstrap-toggle/bootstrap-toggle.js" ></script>

<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>

<script>
    function handleBrowseButton_Preview(ButtonId, HiddenInputId, previewImageId){
        $('#'+ButtonId).click(function (event) {
            event.preventDefault() ; // prevents the form from automatically submitting
            $('#'+HiddenInputId).click(); // actually clicks the file upload browse button


            $('#'+HiddenInputId).change(function(event){
                // this function is run when file is successfully selected by user
                console.log("yolo man") ;
                $('#preview-image').attr('src', URL.createObjectURL(event.target.files[0]));
                return false ;
            });


        }) ;
    }
    handleBrowseButton_Preview("btn-file-choose","hidden-file-chooser", "preview-image") ;


    function setupCheckboxToggleButton(PresentationToggleInputId, HiddenInputId){
        // actually sets the input value to true or false based on presentation checkbox
        $('#' + PresentationToggleInputId).on('change', function() {
            if(this.checked){
                $('#' + HiddenInputId).val('true') ;
            } else {
                // this is necessary if user checked it and then unchecked it.
                $('#' + HiddenInputId).val('false') ;
            }
        });
    }
    setupCheckboxToggleButton('input-category-isActive-presentation', 'input-category-isActive-hidden') ;

</script>






</html>
