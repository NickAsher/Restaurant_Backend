<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap-toggle/bootstrap-toggle.css" >
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">

                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h1 class="">Category Detail</h1>
                        </div>
                    </div>
                </div>
                <br><br><br>


                <div class="row">
                    <div class="push-md-1 col-md-10" >
                        <div class="card">
                            <div class="card-block">

                                <div class="form-group row">
                                    <label for="input-category-name" class="col-3 col-form-label">Category Name</label>
                                    <div class="col-md-9">
                                        <input id="input-category-name" class="form-control" type="text" value="{{categoryData.category_name}}" readonly>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="input-category-active" class="col-3 col-form-label">Category Active</label>
                                    <div class="col-md-9">
                                        <input id="input-category-active" class="form-control" type="hidden" value="{{categoryData.category_is_active}}" readonly >
                                        <input id="input-category-active-presentation" type="checkbox" class="form-control" {{#if categoryData.category_is_active}} checked="checked" {{/if}} disabled data-toggle="toggle" data-width="100" data-onstyle="success" data-offstyle="danger" data-on="<i class='fa fa-check'></i>" data-off="<i class='fa fa-times'></i>" >
                                    </div>
                                </div>
                                <br>

                                <div class="form-group row">
                                    <label  class="col-3 col-form-label">Category Image</label>
                                    <div class="col-md-4">
                                        <img src='{{IMAGE_BACKENDFRONT_LINK_PATH}}{{categoryData.category_image}}' alt='image' class="img-fluid" />
                                    </div>
                                </div>
                                <br><br>

                                <div class="form-group row">
                                    <div class="col-4" ></div>
                                    <a href='/menu/category/edit/{{categoryData.category_id}}' class='col-4 btn btn-outline-info' >Edit this Category</a>
                                    <div class="col-4" ></div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>


                <br><br><br><br><br>
            </div>
        </div>
    </div>

</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/lib/bootstrap-toggle/bootstrap-toggle.js" ></script>

<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>








</html>
