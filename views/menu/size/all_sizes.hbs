<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-12">


                <br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="text-center">
                            <h1 class="">All {{categoryData.category_name}} sizes</h1>
                            <a href='/menu/size/arrange/{{categoryData.category_id}}' class="mytheme-anchor">Change Order</a>
                            <br><a href='/menu/size/change-default/{{categoryData.category_id}}' class="mytheme-anchor">Change Default Size</a>

                        </div>
                    </div>
                </div>
                <br><br><br>







                <table  class='table table-bordered table-hover' >
                    <tr class='table-info'>
                        <th>Sr No</th>
                        <th>Size Name</th>
                        <th>Size Abbreviation</th>
                        <th>Is Default</th>
                        <th>Is Active</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    {{#each sizeData}}
                        <tr>
                            <td>  {{@index}}  </td>
                            <td>  {{size_name}}  </td>
                            <td>  {{size_name_short}}  </td>
                            <td>
                                {{#if size_is_default}}
                                    <button class='btn btn-success' >Yes</button>
                                {{/if}}
                            </td>
                            <td>
                                {{#if size_is_active}}
                                    <button class='btn btn-success' ><i class='fa fa-check'></i></button>
                                {{else}}
                                    <button class='btn btn-danger' ><i class='fa fa-times'></i></button>
                                {{/if}}
                            </td>
                            <td>
                                <a href="/menu/size/edit/{{size_id}}">
                                    <button type='submit' class='btn btn-info' >
                                        <span><i class='fa fa-edit'></i></span>
                                        Edit Size
                                    </button>
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-danger button_Delete" type="button" data-size-id="{{size_id}}" data-toggle="modal" data-target="#modal_Delete" >
                                    <span><i class='fa fa-trash'></i></span>
                                    Delete Size
                                </button>
                            </td>
                        </tr>
                    {{/each}}
                </table>
                <br>
                <br>
                <div class="text-center">
                    <a class="col-sm-4 btn btn-outline-info" href="/menu/size/add/{{categoryData.category_id}}">
                        Add New Item
                    </a>
                </div>
                <br><br><br><hr><br><br><br>








                <div class="modal fade" id="modal_Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this addon</h6>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p> The following action will also delete the following data</p>
                                <ul>
                                    <li> The price data of Dishes, for this size</li>
                                    <li> The price data of addons, for this size</li>

                                </ul>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <form class="text-center" method='post' action='/menu/size/delete' >
                                    <input id="input-sizeId" type='hidden' name='sizeId'>
                                    <input id="input-categoryId" type='hidden' name="categoryId" value='{{categoryData.category_id}}'>
                                    <input type="hidden" name="_csrf" value="some csrf token here">
                                    <input type='submit' class='btn btn-danger' value='Yes'>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>





            </div>
        </div>
    </div>
</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>

<script>


    /* This code is needed as the active class is not removed from the nav item in bootstrap-alpha6
     */
    $(".nav-link").click(function() {
        $(".nav-link").removeClass('active');
    });


    $('#modal_Delete').on('show.bs.modal', function (event) {
        let button = $(event.relatedTarget) ; // Button that triggered the modal
        let sizeId = button.attr('data-size-id') ;

        $(this).find('#input-sizeId').val(sizeId) ;
    }) ;
</script>







</html>
