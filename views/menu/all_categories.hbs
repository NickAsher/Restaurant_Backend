<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-md-12">



                <br><br><br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="text-center">
                            <h1 class="">All Categories</h1>
                            <a href='\menu\category\arrange' class="mytheme-anchor">Change Order</a>

                        </div>
                    </div>
                </div>
                <br><br><br>


                <table  class='table table-bordered table-hover' >

                    <tr class='table-info'>
                        <th>Sr No</th>
                        <th>Image</th>
                        <th>Category Name</th>
                        <th>Is Active</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        <th>Manage</th>
                    </tr>

                    {{#each categoryData}}
                        <tr>
                            <td class='td-link' data-href='/menu/category/view/{{category_id}}'>  {{@index}}  </td>
                            <td class='td-link' data-href='/menu/category/view/{{category_id}}'><img src='{{@root.IMAGE_BACKENDFRONT_LINK_PATH}}{{category_image}}' class='img-fluid' width='90px' ></td>
                            <td class='td-link' data-href='/menu/category/view/{{category_id}}'>  {{category_name}}  </td>

                            <td class='td-link' data-href='/menu/category/view/{{category_id}}'>
                            {{#if category_is_active}}
                                <button class='btn btn-success' ><i class='fa fa-check'></i></button>
                            {{else}}
                                <button class='btn btn-danger' ><i class='fa fa-times'></i></button>
                            {{/if}}
                            </td>
                            <td>
                                <a href="/menu/category/edit/{{category_id}}">
                                    <button type='submit' class='btn btn-info' ><span><i class='fa fa-edit'></i></span> Edit Category</button>
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-danger button_Delete" type="button" data-category-id="{{category_id}}" data-category-image-name="{{category_image}}" data-toggle="modal" data-target="#modal_Delete" >
                                    <span><i class='fa fa-trash'></i></span> Delete Category
                                </button>
                            </td>
                            <td>
                                <a class='btn btn-lg btn-default' href='/menu/category/manage/{{category_id}}'>
                                    <i class='fa fa-cog'></i>
                                </a>
                            </td>

                        </tr>

                    {{/each}}


                </table>






                <br><br>
                <div class="row">
                    <div class="col-4"></div>
                    <a class="col-4 btn btn-outline-info" href="/menu/category/add">
                        Add New Item
                    </a>
                    <div class="col-4"></div>
                </div>

                <div class="modal fade" id="modal_Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this Category</h6>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Deleting a category will also delete all the dishes associated with the category.
                                    All the addons and the size data for this category will also be delete
                                </p>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <form class="text-center" method='post' action='/menu/category/delete' enctype="multipart/form-data">
                                    <input id="input_BlogId" type='hidden' name='post_BlogId'>
                                    <input id="input_BlogImageName" type='hidden' name='post_ImageFileName'>
                                    <input type="hidden" name="_csrf" value="some csrf token here">
                                    <input type='submit' class='btn btn-danger ' value='Yes'>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>





            </div>
        </div>
    </div>
</section>



{{>footer}}


</body>
