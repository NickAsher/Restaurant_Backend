<html>
<head>
    <title>Admin | Gagneja</title>
    <meta charset="utf-8">



    <link rel="stylesheet" href="/lib/reset/reset.css" >

    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-grid.min.css" >
    <link rel = "stylesheet" href="/lib/bootstrap4/bootstrap-reboot.min.css" >

    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" >

    <link rel="stylesheet" href="/lib/t3/t3.css" />

    <link rel="stylesheet" href="/css/my_personal.css">
</head>
<body>

{{>header}}
<section>

    {{>sidebar}}

    <div class="container-fluid t3-push" id="mainContainer">
        <div class="row">
            <div id = "main_Content" class="col-12">


                <br><br>
                <div class="page-title bg-light">
                    <div class="container">
                        <div class="text-center">
                            <h1 class="">All {{categoryData.category_name}} Addon-Groups</h1>
                            <a href='/menu/addonGroup/arrange/{{categoryData.category_id}}' class="mytheme-anchor">Change Order</a>

                        </div>
                    </div>
                </div>
                <br><br><br>


                <table  class='table table-bordered table-hover' >
                    <tr class='table-info'>
                        <th>Sr No</th>
                        <th>Addon-Group Name</th>
                        <th>Addon-Group Type</th>
                        <th>Is Active</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                    {{#ifEquals addonGroupData.length 0}}
                        {{>empty_state_table}}
                    {{/ifEquals}}

                    {{#each addonGroupData}}
                        <tr>
                            <td>  {{increment @index}}  </td>
                            <td>  {{addon_group_display_name}}  </td>
                            <td>
                                {{#ifEquals addon_group_type 'radio'}}
                                    Single-Select
                                {{else}}
                                    Multi-Select
                                {{/ifEquals}}
                            </td>
                            <td>
                                {{#if addon_group_is_active}}
                                    <button class='btn btn-success' ><i class='fa fa-check'></i></button>
                                {{else}}
                                    <button class='btn btn-danger' ><i class='fa fa-times'></i></button>
                                {{/if}}
                            </td>
                            <td>
                                <a href="/menu/addonGroup/edit/{{rel_id}}">
                                    <button type='submit' class='btn btn-info' >
                                        <span><i class='fa fa-edit'></i></span>
                                        Edit Addon-Group
                                    </button>
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-danger button_Delete" type="button" data-addonGroup-id="{{rel_id}}" data-toggle="modal" data-target="#modal_Delete" >
                                    <span><i class='fa fa-trash'></i></span>
                                    Delete Addon-Group
                                </button>
                            </td>
                        </tr>
                    {{/each}}
                </table>
                <br>
                <br>
                <div class="text-center">
                    <a class="col-sm-4 btn btn-outline-info" href="/menu/addonGroup/add/{{categoryData.category_id}}">
                        Add New Item
                    </a>
                </div>
                <br><br><br><hr><br><br><br>








                <div class="modal fade" id="modal_Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this Addon-Group</h6>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <form class="text-center" method='post' action='/menu/addonGroup/delete' >
                                    <input id="input-addonGroupId" type='hidden' name='addonGroupId'>
                                    <input id="input-categoryId" type='hidden' name='categoryId' value="{{categoryData.category_id}}">
                                    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
                                    <input type='submit' class='btn btn-danger' value='Yes'>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



                <div id="space_before_footer">
                    <br><br><br><br><br>
                </div>





            </div>
        </div>
    </div>
</section>



{{>footer}}


</body>
<script type="text/javascript" src="/lib/jquery/jquery.js" ></script>
<script type="text/javascript" src="/lib/bootstrap4/bootstrap.min.js" ></script>
<script type="text/javascript" src="/js/my_personal.js"></script>
<script type="text/javascript" src="/lib/t3/t3.js"></script>

<script>


    /* This code is needed as the active class is not removed from the nav item in bootstrap-alpha6
     */
    $(".nav-link").click(function() {
        $(".nav-link").removeClass('active');
    });


    $('#modal_Delete').on('show.bs.modal', function (event) {
        let button = $(event.relatedTarget) ; // Button that triggered the modal
        let addonGroupId = button.attr('data-addonGroup-id') ;

        $(this).find('#input-addonGroupId').val(addonGroupId) ;
    }) ;
</script>







</html>
